
@{
    ViewBag.Title = "ShowProduct";
}
<h3>
    <a href="/Product/ShowProduct" class="btn btn-info">Product List</a> <a href="/Product/AddProduct" class="btn btn-info">Add Product</a>
    <a href="/Product/Product" class="btn btn-info">Add to Cart</a>  <a href="/Product/Orders" class="btn btn-info">Orders</a>
    <a href="/Product/Cart" class="btn btn-info">Cart</a>

</h3>
<br />
<h3>Product List</h3>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.Qty</td>
            <td><a href="/Product/Edit/@p.Id" class="btn btn-info">Edit</a></td>
            <td><a href="/Product/DeleteProduct/@p.Id" class="btn btn-info">Delete</a></td>
        </tr>
    }
</table>

